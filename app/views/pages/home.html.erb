<div class="row">
    <div class="col-xs-3">
      
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">  
            <img src="/assets/balloon.jpg" class="panel-image-preview">
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/assets/smart-bull.png" class="img-responsive"></div>
                <div class="col-sm-10"><h4><%= current_user.username %></h4></div>
                <div class="col-sm-12">
                  <div class="col-sm-6">POSTS<br>
                    <h6><%= current_user.posts.count %></h6>
                  </div>
                  <div class="col-sm-6">FOLLOWERS<br>
                    <h6>FILL IN WITH FOLLOWERS LATER</h6>
                  </div>
                </div>
            </div>

          </div>
        </div>
        
        <div class="panel panel-default">
          <div class="panel-body">
             <h5>Trends</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
          </div>
        </div>
    </div>
    <div class="col-xs-6">
        <%= render '/components/post_form' %><br><br>

        <% @posts.each do |post| %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            
            <div class="col-sm-1">
              <img src="/assets/smart-bull.png" class="img-responsive"></img>
            </div>
            <div class="col-sm-11">
              <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(post.user_id).username %>"><%= User.find(post.user_id).username %></a></span> <span class="post-creation">- <%= post.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= post.content %></p>
            </div>
            
            <div class="col-sm-12">
              <p class="post-links">
                <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                <a href="">View conversation</a>
              </p>
            </div>
            
          </div>
        </div>
        <% end %>
        
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <div class="col-sm-12">
            <center><img src="/assets/penguin.png">
              <a href="#top"><p>Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a>
            </center>
            </div>
          </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <p class="btm-links">Â© 2016 Flutter  About  Help  Terms  Privacy  Cookies  Ads Info  Brand  Blog  Status  Apps  Jobs  Advertise  Businesses  Media  Developers</p>
          </div>
        </div>
    </div>
</div>