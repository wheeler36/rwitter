<div class="row">
  <div class="col-xs-12">
    <div class="jumbotron">
      <h2><%= @username %></h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>profile</p>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <%= render '/components/post_form' %>

    <% @posts.each do |post| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <p><%= post.content %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>who to follow</p>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <p>trends</p>
      </div>
    </div>
  </div>
  
</div>